{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ParamGen Watch",
      "type": "shell",
      "command": "python tools/param-gen/paramwatch.py",
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "clear": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "ERROR:\\s+(.*):(\\d+):(\\d+)\\s+(.*)",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Watching parameter schemas",
          "endsPattern": "Regenerating parameters"
        }
      }
    }
  ]
}
